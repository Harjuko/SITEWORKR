<div class="container row">
  <div class="index-left col-xs-12 col-md-8 ">
  <div class="head-index">
     <h3>Your search results: (<%= @users.count %>)</h3>
     <h4><%= link_to "See all siteworks", users_path %></h4>
  </div>
  <% if @users.count == 0 %>
    <%= "Your search has not found any siteworkrs, please try again" %>
  <% end %>
    <% @users.each do |user| %>
    <li>
      <div class="message user-card">

        <%= cl_image_tag(user.photo.url, class: "avatar-medium") %>
        <div class="message-name">
          <h3><%= link_to user.name.capitalize, user %></h3>
        </div>
        <div class="message-body">
          <p><strong><p>Skills: <%= user.skill %></p></strong></p>
          <p>Certificates: <%= user.certificates %></p>
        </div>
        <div class="message-status">
          <!-- <p class="status pending">Pending</p> -->
          <p class="price">Â£<%= user.rate %> per day</p>
        </div>
      </div>

    </li>
    <% end %>
  </ul>
  </div>
  <div class="index-right col-xs-12 col-md-4">
      <div
        id="map"
        style="width: 100%;
        height: calc(100vh - 110px);"
        data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
</div>
<%= javascript_pack_tag "map" %>
