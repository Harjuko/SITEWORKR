<div class="container">
  <h3 style="text-align:right;"><%= @user.name %>'s profile</h3>
  <div class="row mg-30">
    <div class="col-sm-3">
      <div class="user-card">
        <%= cl_image_tag @user.photo, class: "avatar-large" %>
        <h3><%= @user.name %></h3><br>
        <p><%= @user.address %></p>
        <p>Skill: <%= @user.skill %></p>
        <p>Certificates: <%= @user.certificates %></p>
        <p>Rate: Â£<%= @user.rate %> per day</p>
        <%= link_to 'Contact', matches_path, class: "btn btn-primary"  %> <br><br>
        <% if @user == current_user %>
         <%= link_to 'Create a Job', new_job_path, class: "btn btn-primary" %>
        <% else %>
         <%= link_to 'Hire', new_match_path(user: @user), class: "btn btn-primary" %>
        <% end  %>
      </div>
    </div>
    <div class="col-sm-9">
      <h5 class="profile-header">About me</h5>
      <div class="about-card">
        <p><%= @user.about_me %></p>
      </div>
        <h5 class="profile-header">Work History</h5>
      <div class="experience">
        <div class="experience-card">
          <p><%= @user.experience %></p>
        </div>

      </div>
    </div>
  </div>
</div>
